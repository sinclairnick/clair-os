# ClairOS Environment Configuration
# Copy this file to .env and fill in your values

# Database
DB_PASSWORD=clairios_dev

# BetterAuth Secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your_secret_here

# BetterAuth Base URL
BETTER_AUTH_URL=http://localhost:3001

# Google OAuth (get from https://console.cloud.google.com/apis/credentials)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# GitHub OAuth (optional, get from https://github.com/settings/developers)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Frontend API URL (for Vite)
VITE_API_URL=http://localhost:3001

# OpenFGA (usually don't need to change for local dev)
OPENFGA_API_URL=http://localhost:8080

# Minio (Storage)
MINIO_ROOT_USER=clairios_admin
MINIO_ROOT_PASSWORD=clairios_storage_dev
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_BUCKET=clairios
MINIO_PUBLIC_URL=http://localhost:9000
