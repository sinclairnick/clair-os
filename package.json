{
  "name": "clairios",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "api",
    "app"
  ],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "dev:api": "bun --filter api dev",
    "dev:app": "bun --filter app dev",
    "dev:infra": "docker-compose -f docker-compose.infra.yml up -d",
    "dev:infra:down": "docker-compose -f docker-compose.infra.yml down",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up",
    "build": "bun --filter '*' build",
    "build:api": "bun --filter api build",
    "build:app": "bun --filter app build",
    "lint": "bun --filter '*' lint",
    "test": "bun --filter '*' test",
    "db:generate": "bun --filter api db:generate",
    "db:migrate": "bun --filter api db:migrate",
    "db:studio": "bun --filter api db:studio",
    "import:recipes": "bun scripts/import-legacy-recipes.ts"
  },
  "devDependencies": {
    "tsx": "^4.19.4",
    "typescript": "~5.9.3"
  },
  "volta": {
    "node": "22.21.1"
  }
}
