{
  "name": "clairos",
  "version": "0.0.32",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter '*' dev",
    "dev:api": "pnpm --filter api dev",
    "dev:app": "pnpm --filter app dev",
    "dev:infra": "docker-compose -f docker-compose.infra.yml up -d",
    "dev:infra:down": "docker-compose -f docker-compose.infra.yml down",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up",
    "build": "pnpm --filter '*' build",
    "build:api": "pnpm --filter api build",
    "build:app": "pnpm --filter app build",
    "lint": "pnpm --filter '*' lint",
    "test": "pnpm --filter '*' test",
    "db:generate": "pnpm --filter api db:generate",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:studio": "pnpm --filter api db:studio",
    "import:recipes": "node --loader tsx scripts/import-legacy-recipes.ts",
    "postversion": "git push --follow-tags"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "typescript": "~5.9.3"
  },
  "volta": {
    "node": "25.2.1"
  },
  "packageManager": "pnpm@10.26.2"
}
