{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ingredient Category Mapping",
  "definitions": {
    "category": {
      "type": "string",
      "enum": [
        "Produce",
        "Meat & Seafood",
        "Dairy & Eggs",
        "Pantry",
        "Canned Goods",
        "Frozen",
        "Bakery",
        "Beverages",
        "Snacks",
        "Household",
        "Other"
      ]
    }
  },
  "type": "object",
  "properties": {
    "categories": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/category"
      }
    },
    "mappings": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/category"
      }
    }
  },
  "required": [
    "categories",
    "mappings"
  ]
}
